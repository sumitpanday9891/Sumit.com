    <!-- JavaScript: इंटरैक्टिविटी के लिए -->
    <script>
        // मोबाइल मेन्यू टॉगल करने का फ़ंक्शन
        document.getElementById('menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // मोबाइल मेन्यू लिंक्स पर क्लिक करने के बाद मेन्यू को बंद कर देना
        document.querySelectorAll('#mobile-menu a').forEach(item => {
            item.addEventListener('click', () => {
                document.getElementById('mobile-menu').classList.add('hidden');
            });
        });

        // फॉर्म सबमिशन हैंडलिंग (यह केवल उदाहरण है, असली सर्वर साइड प्रोसेसिंग आवश्यक है)
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault(); // फॉर्म को डिफ़ॉल्ट रूप से सबमिट होने से रोकना
            
            const form = e.target;
            const name = form.name.value;
            const email = form.email.value;
            const message = form.message.value;

            // फॉर्म डेटा को कंसोल में लॉग करना (जाँच के लिए)
            console.log("संपर्क फ़ॉर्म सबमिट हुआ:");
            console.log("नाम:", name);
            console.log("ईमेल:", email);
            console.log("संदेश:", message);

            // एक साधारण UI संदेश दिखाएँ (अलर्ट का उपयोग न करें)
            alertMessage('धन्यवाद! आपका संदेश सफलतापूर्वक भेज दिया गया है।', 'success');

            // फ़ॉर्म को रीसेट करें
            form.reset();
        });

        /**
         * कस्टम संदेश बॉक्स फ़ंक्शन (alert() की जगह)
         * @param {string} msg - प्रदर्शित करने के लिए संदेश
         * @param {string} type - संदेश का प्रकार ('success' or 'error')
         */
        function alertMessage(msg, type) {
            let messageBox = document.getElementById('custom-alert');
            
            if (!messageBox) {
                // अगर संदेश बॉक्स मौजूद नहीं है, तो नया बनाएँ
                messageBox = document.createElement('div');
                messageBox.id = 'custom-alert';
                messageBox.className = 'fixed top-4 right-4 p-4 rounded-lg shadow-xl text-white transition-opacity duration-300 z-50';
                document.body.appendChild(messageBox);
            }
            
            // स्टाइलिंग सेट करें
            messageBox.textContent = msg;
            messageBox.classList.remove('bg-green-500', 'bg-red-500', 'opacity-0');
            
            if (type === 'success') {
                messageBox.classList.add('bg-green-500');
            } else if (type === 'error') {
                messageBox.classList.add('bg-red-500');
            }
            
            // संदेश दिखाना
            messageBox.classList.add('opacity-100');

            // 3 सेकंड के बाद संदेश को हटा देना
            setTimeout(() => {
                messageBox.classList.remove('opacity-100');
                messageBox.classList.add('opacity-0');
            }, 3000);
        }
    </script>
</body>
